<header class="header shop">
    <!-- Header modal -->
    <div class="modal fade" id="localModal" tabindex="-1" role="dialog">
        <div class="modal-dialog local-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="ti-close"
                            aria-hidden="true"></span></button>
                </div>
                <div class="modal-body">
                    <div class="no-gutters">
                        <div class="select-local-form">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <h2 class="label">Chọn vị trí</h2>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group form-address">
                                    <label for="address" class="col-form-label">Địa chỉ:</label>
                                    <input type="text" class="form-control" id="txtAddress">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div id="result-address"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Topbar -->
    <div class="topbar">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-12">
                    <!-- Top Left -->
                    <div class="top-left">
                        <ul class="list-main">
                            <li><i class="ti-headphone-alt"></i> +060 (800) 801-582</li>
                        </ul>
                    </div>
                    <!--/ End Top Left -->
                </div>
                <div class="col-lg-8 col-md-12 col-12">
                    <!-- Top Right -->
                    <div class="right-content">
                        <ul class="list-main">
                            <li title="Quick View" data-toggle="modal" data-target="#localModal" data-whatever="@mdo"><i
                                    class="ti-location-pin"></i>
                                <a class="buyer-address" href="#" id="buyer-address"></a>
                            </li>
                            <li><i class="ti-alarm-clock"></i> <a href="#">Daily deal</a></li>
                            <li><i class="ti-user"></i> <a href="/user">
                                    {{#if user}}
                                    {{#with user}}
                                    {{userName}}
                                    {{/with}}
                                    {{else}}
                                    Tài Khoản
                                    {{/if}}
                                </a>
                            </li>
                            {{#if user}}
                            <li><i class="ti-power-off"></i><a class="logout"
                                    onclick="document.getElementById('logout').submit()" href="#">Logout</a></li>
                            {{else}}
                            <li><i class="ti-power-off"></i><a class="login" href="/login">Login</a></li>
                            {{/if}}
                        </ul>
                    </div>
                    <!-- End Top Right -->
                </div>
            </div>
        </div>
    </div>
    <!-- Header Inner -->
    <div class="header-inner">
        <div class="container">
            <div class="cat-nav-head">
                <div class="row">
                    <div class="col-12">
                        <div class="menu-area">
                            <!-- Main Menu -->
                            <nav class="navbar navbar-expand-lg">
                                <div class="navbar-collapse">
                                    <div class="nav-inner">
                                        <ul class="nav main-menu menu navbar-nav">
                                            <li class="active"><a href="#">Shipper</a></li>
                                            <li><a href="/OrderList">Danh sách</a></li>
                                            <li><a href="/searchOrder">Tìm kiếm đơn hàng</a></li>
                                            <li><a href="/OrderStatistics">Thống kê</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                            <!--/ End Main Menu -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ End Header Inner -->
    <form id="logout" action="/logout" method="post"></form>
</header>