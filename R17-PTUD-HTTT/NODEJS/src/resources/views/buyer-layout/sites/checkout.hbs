<!-- Start Checkout -->
<section class="shop checkout section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="checkout-form">
                    <h2>Thanh toán của bạn ở đây</h2>
                    <p>Vui lòng đăng ký để thanh toán nhanh hơn</p>
                    <!-- Form -->
                    {{#with user}}
                    <form class="form" method="post" action="/api/order" id="orderForm">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Tên người nhận<span>*</span></label>
                                    <input type="text" name="name" placeholder="" required="required"
                                        value="{{userName}}">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Số điện thoại<span>*</span></label>
                                    <input type="number" name="phone" placeholder="" required="required"
                                        value="{{userPhone}}">
                                </div>
                            </div>
                            <div class="col-12" data-toggle="modal" data-target="#localModal"
                                data-whatever="@mdo">
                                <div class="form-group">
                                    <label>Địa chỉ<span>*</span></label>
                                    <input type="text" name="address" id="address-checkout" placeholder=""
                                        required="required" value="">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label>Ghi Chú<span></span></label>
                                    <textarea type="text" name="note" placeholder="" rows="4"></textarea>
                                </div>
                            </div>

                        </div>
                    </form>
                    <!--/ End Form -->
                    {{/with}}
                </div>
            </div>
            <div class="col-lg-4 col-12">
                <div class="order-details">
                    <!-- Order Widget -->
                    <div class="single-widget">
                        <h2>Tổng tiền</h2>
                        <div class="content">
                            <ul>
                                <li>Tạm tính<span class="total-price">0 VND</span></li>
                                <li>(+)Shipping<span>15,000VND</span></li>
                                <li class="last">Tổng cộng<span class="total-price-and-ship">0VND</span></li>
                            </ul>
                        </div>
                    </div>
                    <!--/ End Order Widget -->
                    <!-- Order Widget -->
                    <div class="single-widget">
                        <h2>Thanh toán</h2>
                        <div class="content">
                            <div class="checkbox">
                                <label class="checkbox-inline" for="2"><input name="news" id="2" value="1" type="checkbox">Thanh
                                    toán khi nhận hàng</label>
                                {{!-- <label class="checkbox-inline" for="3"><input name="news" id="3" type="checkbox">
                                    PayPal</label> --}}
                            </div>
                        </div>
                    </div>
                    <!--/ End Order Widget -->
                    <!-- Payment Method Widget -->
                    <div class="single-widget payement">
                        <div class="content">
                            <img src="images/payment-method.png" alt="#">
                        </div>
                    </div>
                    <!--/ End Payment Method Widget -->
                    <!-- Button Widget -->
                    <div class="single-widget get-button">
                        <div class="content">
                            <div class="button">
                                <button class="btn" type="submit" form="orderForm" value="Submit">Thanh toán</button>
                            </div>
                        </div>
                    </div>
                    <!--/ End Button Widget -->
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ End Checkout -->

